@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Home Page";
}
<ul class="gigs">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
                <div class="details">
                    <span class="artist">
                        @gig.Artist.Name
                        <button data-gig-ArtistId="@gig.ArtistId" class="btn btn-default btn-sm pull-right js-toggle-follow">Follow</button>
                    </span>                        
                    <span class="genre">
                        @gig.Genre.Name
                        <button data-gig-id="@gig.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Going?</button>
                    </span>                                                
                </div>
            </div>            
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function() {
            $(".js-toggle-attendance").click(function(e) {
                var button = $(e.target)
                $.post("/api/attendances", { gigId: button.attr("data-gig-id") })
                    .done(function() {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-info")
                            .text("Going");

                    })
                    .fail(function () {
                        alert("Something failed!");
                    });
            });
        });
        </script>

<script>
        $(document).ready(function () {
            $(".js-toggle-follow").click(function (e) {
                var button = $(e.target)
                $.post("/api/followers", { artistId: button.attr("data-artist-id") })
                    .done(function () {
                        button
                            .removeClass("btn-default")
                            .addClass("btn-success")
                            .text("Following");

                    })
                    .fail(function () {
                        alert("Something failed!");
                    });
            });
        });
</script>
}





